fn swap(a: obj, b: obj) -> x: obj, y: obj {
    let n = obj(4)
    var t, t2: obj
    t = x
    t2 = x

    // this is okay because the if only executes once
    if (true) {
        x = b
        y = t2
        t2 = n
    }

    // this throws an exception because the while could execute multiple times
    while(true) {
        x = b
        y = t
        t = n
    }
}

struct obj {
    x: int

    create(x: int) -> self: new obj {
        self.x = x
    }
}

fn main() {
    let x, y = obj(2), obj(3)
    swap(x, y)
}

